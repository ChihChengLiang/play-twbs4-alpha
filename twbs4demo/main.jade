template(name="image")
  if height 
    img.card-img-top.custom-img(src='/yui.jpg' width="100%" height="{{height}}px")
  else
    img.card-img-top.custom-img(src='/yui.jpg' width="100%" height="200px")
template(name="simpleCard")
  .card
    +image
    .card-block
      h4.card-title Card title
      if text
        p {{text}}
      else
        p.card-text Some quick example text to build on the card title and make up the bulk of the card's content.
    
